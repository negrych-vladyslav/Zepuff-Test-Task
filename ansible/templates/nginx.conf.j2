# /ansible/templates/nginx.conf.j2
events {}

http {
    resolver 127.0.0.11 valid=30s; 

    # --- HTTP -> HTTPS Redirect (для обох доменів) ---
    server {
        listen 80;
        server_name {{ prod_domain }} {{ dev_domain }};
        location /.well-known/acme-challenge/ {
            root /var/www/certbot;
        }
        location / {
            return 301 https://$host$request_uri;
        }
    }

    # --- PROD SERVER BLOCK (HTTPS) ---
    server {
        listen 443 ssl;
        server_name {{ prod_domain }};

        ssl_certificate /etc/letsencrypt/live/{{ cert_name }}/fullchain.pem;
        include /etc/letsencrypt/options-ssl-nginx.conf;
        ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

        auth_basic "Restricted Access";
        auth_basic_user_file /etc/nginx/.htpasswd;

        location / {
            set $upstream_prod http://node-app-prod:3000; 
            proxy_pass $upstream_prod;                     

            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
        }
    }

    # --- DEV SERVER BLOCK (HTTPS) ---
    server {
        listen 443 ssl;
        server_name {{ dev_domain }};

        ssl_certificate /etc/letsencrypt/live/{{ cert_name }}/fullchain.pem;
        include /etc/letsencrypt/options-ssl-nginx.conf;
        ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

        auth_basic "Restricted Access";
        auth_basic_user_file /etc/nginx/.htpasswd;

        location / {
            set $upstream_dev http://node-app-dev:3000; 
            proxy_pass $upstream_dev;                     

            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
        }
    }
}
